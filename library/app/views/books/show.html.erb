<h1>
  <%= @book.title %>
</h1>

<dl>
  <dt>ISBN</dt>
  <dd>
    <%= @book.isbn %>
  </dd>
  
  <dt>
    Authors
  </dt>
    <% @book.authors.each do |author| %>
    <dd>
      <%= author.name %>
      
      <% form_tag(book_authorship_path(:book_id => @book, :id => author), {:method => "delete"}) do |f| %>
        <%= submit_tag "Delete" %>
      <% end %>
    </dd>
    
    <% end %>
</dl>

<p>
  <%= link_to "Edit", edit_book_path(@book) %> |
  <%= link_to "Add author", new_book_authorship_path(@book) %>
</p>