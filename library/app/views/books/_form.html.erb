<%= error_messages_for :book %>

<% remote_form_for(@book, :update => "book_list", :success => "$('new_book').reset(); $('book_form').hide()") do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :isbn %>
  <%= f.text_field :isbn %>
  
  <p>
    <%= f.submit submit_text %>
  </p>
<% end %>